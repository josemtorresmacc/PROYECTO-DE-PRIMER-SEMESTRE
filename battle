import pygame, sys, random, time
rng=random.Random()
Time=time.clock()
def yzombieIA():
    global yzombie,xheroe,yheroe,xzombie,zombie
    if yzombie <  yheroe:
        yzombie += 1
    if yzombie >yheroe:
        yzombie -= 1
    if yzombie == yheroe:
        yzombie = yzombie
    if yzombie >= 650:
        yzombie = 650
        campodebatalla.blit(zombie,(xzombie,yzombie))
def xzombiIA():
    global yzombie,xheroe,yheroe,xzombie,zombie
    if xzombie <  xheroe:
        xzombie += 1
    if xzombie >xheroe:
        xzombie -= 1
    if xzombie == xheroe:
        xzombie = xzombie
    if xzombie >= 1300:
        xzombie = 1300
        campodebatalla.blit(zombie,(xzombie,yzombie))
def aheroe ():
    global heroe
    angulo=0
    if evento.type == pygame.MOUSEBUTTONDOWN:
         if evento.button == 3:
             if angulo<=360:
                 angulo += 90
             else:
                 angulo=0
    heroe=pygame.transform.rotate(heroe, angulo)
def balas():
    global xbala,ybala,angulo,bala
    if angulo==0:
        xbala+=10
    elif angulo==45:
        xbala+=10
        ybala+=10
    elif angulo==90:
        ybala=10
    elif angulo ==135:
        xbala-=10
        ybala+=10
    elif angulo==180:
        xbala-=10
    elif angulo==225:
        xbala-=10
        ybala-=10
    elif angulo==270:
        ybala-=10
    elif angulo==315:
        xbala+=10
        ybala-=10
    elif angulo==360:
        xbala+=10
    campodebatalla.blit(bala,(xbala,ybala))    
    

            
    
pygame.init()
xheroe=100
yheroe=100
xzombie = 0
yzombie = 0
xbala=xheroe
ybala=yheroe
angulo=0
w=0
campodebatalla= pygame.display.set_mode((1300,650))
heroe= pygame.image.load("jugador-06.png")
zombie= pygame.image.load("zombie0.png")
bala=pygame.image.load("bala.png")
campodebatalla.fill((250,250,250), (0,0,1300,650))
campodebatalla.blit(zombie,(xzombie,yzombie))
campodebatalla.blit(heroe,(xheroe,yheroe))
campodebatalla.blit(bala,(100,100))
clock = pygame.time.Clock()
heroe= heroe.convert_alpha()
pygame.display.flip()   
while True:    
    tIme=time.clock()
    tiNe=int((tIme-Time))
    campodebatalla.fill((250,250,250), (0,0,1300,650))       
    for evento in pygame.event.get():
        if evento.type == pygame.QUIT:
            pygame.quit()
            sys.exit()
        if evento.type == pygame.KEYDOWN:
            if evento.key == pygame.K_DOWN:
                yheroe += 15
            elif evento.key == pygame.K_UP:
                yheroe -= 15
            elif evento.key == pygame.K_RIGHT:
                xheroe += 15
            elif evento.key == pygame.K_LEFT:
                xheroe -= 15
        if evento.type== pygame.MOUSEBUTTONDOWN:
            if evento.button==1:
                campodebatalla.blit(bala,(xheroe,yheroe))
            
    aheroe()
    balas()    
    yzombieIA()
    xzombiIA()
    campodebatalla.blit(zombie,(xzombie,yzombie))
    campodebatalla.blit(heroe, (xheroe, yheroe))
    pygame.transform.rotate(heroe, angulo)  
    pygame.display.flip()
    clock.tick(60)
